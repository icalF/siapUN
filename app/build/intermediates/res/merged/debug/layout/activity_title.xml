<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.icalicul.afrizal.siapun.TitleActivity"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/titleMainMenu"
        android:textSize="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Latihan"
        android:id="@+id/latihanMainMenu"
        android:layout_below="@+id/titleMainMenu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:longClickable="false"
        android:linksClickable="false"
        android:onClick="gotoExerciseMenu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Riwayat"
        android:id="@+id/riwayatMainMenu"
        android:layout_below="@+id/latihanMainMenu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:onClick="gotoHistoryMenu" />
</RelativeLayout>
