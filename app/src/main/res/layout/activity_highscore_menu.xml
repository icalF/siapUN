<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HighscoreMenuActivity">

  <Button
      android:id="@+id/paket1h"
      android:layout_width="300dp"
      android:layout_height="50dp"
      android:layout_marginTop="100dp"
      android:background="@drawable/round_rect_shape"
      android:text="@string/paket_1"/>

  <Button
      android:id="@+id/paket2h"
      android:layout_width="300dp"
      android:layout_height="50dp"
      android:layout_alignLeft="@+id/paket1h"
      android:layout_alignStart="@+id/paket1h"
      android:layout_below="@+id/paket1h"
      android:layout_marginTop="20dp"
      android:background="@drawable/round_rect_shape"
      android:text="@string/paket_2"/>

  <Button
      android:id="@+id/paket3h"
      android:layout_width="300dp"
      android:layout_height="50dp"
      android:layout_alignLeft="@+id/paket2h"
      android:layout_alignStart="@+id/paket2h"
      android:layout_below="@+id/paket2h"
      android:layout_marginTop="20dp"
      android:background="@drawable/round_rect_shape"
      android:text="@string/paket_3"/>

  <Button
      android:id="@+id/paket4h"
      android:layout_width="300dp"
      android:layout_height="50dp"
      android:layout_alignLeft="@+id/paket3h"
      android:layout_alignStart="@+id/paket3h"
      android:layout_below="@+id/paket3h"
      android:layout_marginTop="20dp"
      android:background="@drawable/round_rect_shape"
      android:text="@string/paket_4"/>

</LinearLayout>
